{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "ram-debug",
      "displayName": "Debug (RAM ${sourceDir}/build/Debug)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "ram-release",
      "displayName": "Release (RAM ${sourceDir}/build/Release)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "build-ram-debug",
      "configurePreset": "ram-debug",
      "targets": ["breaking_lcg"],
      "jobs": 0
    },
    {
      "name": "build-ram-release",
      "configurePreset": "ram-release",
      "targets": ["breaking_lcg"],
      "jobs": 0
    }
  ]
}
